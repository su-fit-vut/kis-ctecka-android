<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KISCtecka" parent="Theme.Material3.Dark">
        <item name="appBackground">@color/su_blue</item>

        <item name="android:background">?appBackground</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:textColor">@color/white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?appBackground</item>
        <item name="android:navigationBarColor">?appBackground</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

    <style name="Theme.KISCtecka.OLed">
        <item name="appBackground">@color/black</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="background">@color/primary_dark</item>
    </style>

    <style name="ActionBarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="textFillColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.KISCtecka.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KISCtecka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KISCtecka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>