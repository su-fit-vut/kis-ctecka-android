<resources>
    <!-- Base application theme. -->
    <style name="Theme.KISČtečka" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">@color/su_blue</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:textColor">@color/white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/su_blue</item>
        <item name="android:navigationBarColor">@color/su_blue</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/dosis_medium</item>
    </style>

<!--    <style name="Theme.KISČtečka" parent="Theme.KISČtečkaDay" />-->

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="background">@color/purple_200</item>
    </style>
    <style name="ActionBarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="textFillColor">@color/white</item>
    </style>
</resources>